# ============================================================
# Domain & Networking
# ============================================================
DOMAIN=example.com
ELEMENT_DOMAIN=chat.example.com
MATRIX_DOMAIN=matrix.example.com
PUBLIC_BASEURL=https://matrix.example.com

# ============================================================
# Synapse
# ============================================================
SYNAPSE_SERVER_NAME=example.com
SYNAPSE_REPORT_STATS=no

# Registration signing key — generate with:
#   docker compose run --rm synapse generate
# Then copy the signing key from the generated config.
SYNAPSE_SIGNING_KEY=__GENERATE_ME__

# Registration
SYNAPSE_ENABLE_REGISTRATION=false
SYNAPSE_REGISTRATION_REQUIRES_TOKEN=true
SYNAPSE_REGISTRATION_SHARED_SECRET=__CHANGE_ME_LONG_RANDOM_STRING__

# Macaroon / form secrets — generate each with: openssl rand -hex 32
SYNAPSE_MACAROON_SECRET_KEY=__CHANGE_ME__
SYNAPSE_FORM_SECRET=__CHANGE_ME__

# ============================================================
# PostgreSQL
# ============================================================
POSTGRES_DB=synapse
POSTGRES_USER=synapse
POSTGRES_PASSWORD=__CHANGE_ME_DB_PASSWORD__
POSTGRES_INITDB_ARGS=--encoding=UTF-8 --lc-collate=C --lc-ctype=C

# ============================================================
# SMTP (for email notifications & password resets)
# ============================================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASSWORD=__CHANGE_ME_SMTP_PASSWORD__
SMTP_FROM=Your Brand <noreply@example.com>

# ============================================================
# TURN server (Phase 2 — VoIP)
# ============================================================
TURN_DOMAIN=turn.example.com
TURN_SECRET=__CHANGE_ME_TURN_SECRET__
# TURN_MIN_PORT=49152
# TURN_MAX_PORT=49200

# ============================================================
# Backup
# ============================================================
BACKUP_ENCRYPTION_PASSPHRASE=__CHANGE_ME_BACKUP_PASSPHRASE__
# rclone remote name (configure with: rclone config)
BACKUP_RCLONE_REMOTE=offsite:backups/matrix

# ============================================================
# Admin bootstrap
# ============================================================
ADMIN_USER=admin
ADMIN_PASSWORD=__CHANGE_ME_ADMIN_PASSWORD__

# ============================================================
# Branding
# ============================================================
BRAND_NAME=YourBrand Chat

# ============================================================
# Let's Encrypt
# ============================================================
CERTBOT_EMAIL=admin@example.com
